{
  "name": "js-link",
  "version": "0.1.0",
  "description": "API testing tool",
  "scripts": {
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:one": "playwright test --workers=1 --reporter=list --headed",
    "test:e2e:one:slow": "SLOW_MO=500 playwright test --workers=1 --reporter=list --headed",
    "test:e2e:one:very-slow": "SLOW_MO=1000 playwright test --workers=1 --reporter=list --headed",
    "test:e2e:one:headless": "HEADLESS=true playwright test --workers=1 --reporter=list"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0"
  }
}
